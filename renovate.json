{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "kubernetes": {
    "managerFilePatterns": [
      "/^manifests/.+\\.yaml$/"
    ]
  },
  "flux": {
    "managerFilePatterns": [
      "/^manifests/.+\\.yaml$/"
    ]
  },
  "ignorePaths": [
    "manifests/flux-system/gotk-components.yaml"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update GitHub release references in kustomization.yaml",
      "managerFilePatterns": [
        "/manifests/.+/kustomization.ya?ml$/"
      ],
      "matchStrings": [
        "https:\\/\\/github\\.com\\/(?<depName>.*\\/.*?)\\/releases\\/download\\/(?<currentValue>.*?)\\/"
      ],
      "datasourceTemplate": "github-releases"
    },
    {
      "customType": "regex",
      "description": "Update GitHub tag references in kustomization.yaml",
      "managerFilePatterns": [
        "/manifests/.+/kustomization.ya?ml$/"
      ],
      "matchStrings": [
        "https://raw\\.githubusercontent\\.com/(?<depName>[^/]*/[^/]*)/(?<currentValue>v?\\d+\\.\\d+\\.\\d+)/"
      ],
      "datasourceTemplate": "github-tags"
    },
    {
      "customType": "regex",
      "description": "Update version references in YAML files",
      "managerFilePatterns": [
        "/^manifests/.+\\.yaml$/",
        "controlplane.yaml"
      ],
      "matchStrings": [
        "#\\s*renovate:\\s*datasource=(?<datasource>\\S+)\\s+depName=(?<depName>\\S+)(?:\\s+versioning=(?<versioning>\\S+))?(?:\\s+extractVersion=(?<extractVersion>\\S+))?\\s*[\\r\\n]+\\s*[^:#]+:\\s*(?:[^\\s\"']+:)?(?<currentValue>v?[0-9][^\\s\"']*)"
      ]
    }
  ]
}
